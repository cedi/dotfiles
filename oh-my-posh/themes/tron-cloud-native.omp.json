{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#26C6DA",
                    "background": "#303030",
                    "properties": {
                        "postfix": " \uE0B1"
                    }
                },
                {
                    "type": "session",
                    "style": "powerline",
                    "background": "#303030",
                    "foreground": "#26C6DA",
                    "powerline_symbol": "\ue0b0",
                    "foreground_templates": [
                        "{{ if .Root }}#b62d66{{ end }}"
                    ]
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "background": "#0077c2",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "prefix": " \uf07b  ",
                        "style": "full",
                        "enable_hyperlink": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "background": "#deb45b",
                    "foreground": "#193549",
                    "powerline_symbol": "\ue0b0",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
                        "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
                        "{{ if gt .Behind 0 }}#B388FF{{ end }}"
                    ],
                    "properties": {
                        "fetch_status": true,
                        "fetch_stash_count": true,
                        "fetch_upstream_icon": true,
                        "branch_max_length": 25,
                        "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }}"
                    }
                }
            ]
        },
        {
            "alignment": "right",
            "type": "prompt",
            "vertical_offset": 0,
            "horizontal_offset": 0,
            "segments": [
                {
                    "type": "shell",
                    "style": "powerline",
                    "background": "#0077c2",
                    "foreground": "#ffffff",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "properties": {
                        "prefix": " \uf489 "
                    }
                },
                {
                    "type": "executiontime",
                    "style": "powerline",
                    "foreground": "#ffffff",
                    "background": "#b62d66",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "properties": {
                        "threshold": 500,
                        "style": "austin",
                        "prefix": " \ufbab "
                    }
                },
                {
                    "type": "go",
                    "style": "powerline",
                    "foreground": "#5a7387",
                    "background": "#bbf0ef",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "properties": {
                        "prefix": " \uFCD1 "
                    }
                },
                {
                    "type": "dotnet",
                    "style": "powerline",
                    "foreground": "#ffffff",
                    "background": "#00ffff",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "properties": {
                        "prefix": " \uE77F "
                    }
                },
                {
                    "type": "python",
                    "style": "powerline",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "foreground": "#5a7387",
                    "background": "#bbf0ef",
                    "properties": {
                        "prefix": " \uE235 "
                    }
                },
                {
                    "type": "rust",
                    "style": "powerline",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "foreground": "#5a7387",
                    "background": "#bbf0ef",
                    "properties": {
                        "prefix": " \uE7a8 "
                    }
                },
                {
                    "type": "kubectl",
                    "style": "powerline",
                    "background": "#bfd4ff",
                    "foreground": "#000000",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "properties": {
                        "prefix": " ⎈ ",
                        "template": "{{.Context}} {{if .Namespace}}: {{.Namespace}}{{end}}"
                    }
                },
                {
                    "type": "az",
                    "style": "powerline",
                    "background": "#bfd4ff",
                    "foreground": "#000000",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b2",
                    "properties": {
                        "prefix": " \ufd03 ",
                        "template": "Subscription {{ .Name }} ({{ if .EnvironmentName | contains \"AzureCloud\" }}{{ \"Global\" }}{{ else }}{{ .EnvironmentName }}{{ end }})"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "newline": true,
            "segments": [
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#f1184c{{ end }}"
                    ]
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#75d629",
                    "properties": {
                        "text": "❯"
                    }
                }
            ]
        }
    ],
    "console_title": true,
    "console_title_style": "template",
    "console_title_template": " {{ .User }}@{{ .Host }} in {{ .Folder }} - {{ .Shell }}",
    "final_space": false,
    "transient_prompt": {
        "background": "transparent",
        "foreground": "#75d629",
        "template": "{{ .Path }} ❯ "
    }
}